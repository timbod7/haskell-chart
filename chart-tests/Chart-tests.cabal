Name: Chart-tests
Version: 0.17
License: BSD3
License-file: LICENSE
Copyright: Tim Docker, 2006-2010
Author: Tim Docker <tim@dockerz.net>
Maintainer: Tim Docker <tim@dockerz.net>
Homepage: https://github.com/timbod7/haskell-chart/wiki
Synopsis: Tests of the Charts library.
Description: Tests of the Charts library.
Category: Graphics
Cabal-Version: >= 1.10
Build-Type: Simple

Extra-Source-Files:
     tests/all_tests.hs,
     tests/Test1.hs,
     tests/Test2.hs,
     tests/Test3.hs,
     tests/Test4.hs,
     tests/Test5.hs,
     tests/Test6.hs,
     tests/Test7.hs,
     tests/Test8.hs,
     tests/Test9.hs,
     tests/Test14.hs,
     tests/Test14a.hs,
     tests/Test15.hs,
     tests/Test17.hs,
     tests/TestParametric.hs,     
     tests/Prices.hs,
     tests/ExampleStocks.hs,
     tests/gtk/Prices.hs,
     tests/gtk/TestPicking.hs,
     tests/gtk/darcs_usage.hs,
     tests/drawing/Tests.hs,
     tests/drawing/Cairo.hs,
     tests/drawing/DiagramsCairo.hs

source-repository head
  type:     git
  location: https://github.com/timbod7/haskell-chart

flag cairo
  description: Install cairo backend tests.
  default:     False
  manual:      True

flag gtk
  description: Install GTK backend tests. This also requires the cairo backend.
  default:     False
  manual:      True

flag diagrams
  description: Install Diagrams backend tests. This also requires the cairo backend.
  default:     False
  manual:      True

Executable ChartsTestCairo
  if flag(cairo)
    Build-Depends:
      base >= 3 && < 5, 
      old-locale, 
      array,
      time, 
      mtl, 
      colour          >= 2.2.1,
      data-accessor   == 0.2.*,
      data-default-class < 0.1,
      random          >= 1.0,
      containers      >= 0.5,
      old-time        >= 1.0,
      Chart           >= 0.17,
      Chart-cairo     >= 0.1
  if !flag(cairo)
    Buildable: False
  Main-is: all_tests.hs
  Hs-Source-Dirs: tests
  Ghc-Options: -threaded
  default-language:    Haskell2010

Executable ChartsTestGtk
  if flag(gtk)
    Build-Depends: 
      base >= 3 && < 5, 
      old-locale, 
      array,
      time, 
      mtl, 
      colour          >= 2.2.1,
      data-accessor   == 0.2.*,
      data-default-class < 0.1,
      random          >= 1.0,
      containers      >= 0.5,
      old-time        >= 1.0,
      gtk             >= 0.9.11,
      cairo           >= 0.9.11,
      Chart           >= 0.17,
      Chart-gtk       >= 0.17,
      Chart-cairo      >= 0.1
  if !flag(gtk)
    Buildable: False
  Main-is: TestPicking.hs
  Hs-Source-Dirs: tests/gtk
  Ghc-Options: -threaded
  default-language:    Haskell2010

Executable ChartsTestDrawingCairo
  if flag(cairo)
    Build-Depends: 
      base >= 3 && < 5, 
      old-locale, 
      array,
      time, 
      mtl, 
      colour          >= 2.2.1,
      data-accessor   == 0.2.*,
      data-default-class < 0.1,
      random          >= 1.0,
      containers      >= 0.5,
      old-time        >= 1.0,
      cairo           >= 0.9.11,
      Chart           >= 0.17,
      Chart-cairo     >= 0.1
  if !flag(cairo)
    Buildable: False
  Main-is: Cairo.hs
  Hs-Source-Dirs: tests/drawing
  Ghc-Options: -threaded
  default-language:    Haskell2010

Executable ChartsTestDrawingDiagramsCairo
  if flag(cairo) && flag(diagrams)
    Build-Depends: 
      base >= 3 && < 5, 
      old-locale, 
      array,
      time, 
      mtl, 
      colour          >= 2.2.1,
      data-accessor   == 0.2.*,
      data-default-class < 0.1,
      random          >= 1.0,
      containers      >= 0.5,
      old-time        >= 1.0,
      Chart           >= 0.17,
      Chart-diagrams  >= 0.1,
      diagrams-cairo  >= 0.6.1,
      diagrams-lib    >= 0.6.1,
      diagrams-core   >= 0.6.1
  if !flag(cairo) || !flag(diagrams)
    Buildable: False
  Main-is: DiagramsCairo.hs
  Hs-Source-Dirs: tests/drawing
  Ghc-Options: -threaded
  default-language:    Haskell2010