Category: Graphics
Cabal-Version: >= 1.6
Build-Type: Simple

library
  Build-depends: base >= 3 && < 5
               , old-locale
               , time, mtl, array
               , cairo >= 0.9.11
               , data-accessor == 0.2.*
               , data-accessor-template >= 0.2.1.1 && < 0.3
               , colour >= 2.2.1
               , gtk >= 0.9.11
               , Chart == 0.17
               , Chart-cairo >= 0.1

  Exposed-modules:
        Graphics.Rendering.Chart.Gtk
        Graphics.Rendering.Chart.Gtk.Simple

source-repository head
  type:     git
  location: https://github.com/timbod7/haskell-chart
